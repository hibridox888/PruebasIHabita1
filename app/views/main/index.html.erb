    <div class= "Mensaje">
      <%= link_to "Registrarse", new_user_registration_path %><!- enlace al sistema de registro->
      <br>
      <%= link_to "Ingresar", new_user_session_path %><!- enlace al sistema de ingreso ->
    </div>
  <% end %>
</div>